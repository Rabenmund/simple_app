= link_to "\u2190 "+ "Saisons", teams_path
%h2
  = @season.name
  %small
    = Season.human_attribute_name('#') + " " + "#{@season.id}"
%hr
.row
  .span3
    %legend
      = "Attribute"
    = show_for @season do |s|
      = s.attribute :name
  .span3
    %legend
      = "Wettbewerbe"
    - if @season.competitions.any?
      %ul
        - @season.competitions.each do |competition|
          %li
            = link_to competition.name, season_competition_path(@season, competition)
    - else
      .well#noQuestions='Keine Wettbewerbe vorhanden'
    .toolbar
      = new_competition_button
  .span3
  .span3

%hr
.btn-toolbar
  .btn-group
    = link_to edit_season_path(@season), class: 'btn' do
      %i.icon-edit
      = "Saison bearbeiten"