= simple_form_for @season do |f|
	.row
		.span12
			= f.input :name, autofocus: true, input_html: { class: 'span12' }
			- if @competitions.any?
				= f.association :competitions, as: :check_boxes, collection: @competitions
			- else
				= "Kein Wettbewerb zur Auswahl."
				%br
				= "Alle Wettbewerbe sind zugeordnet."
				%br
				%br
	= f.submit "OK", class: 'btn btn-primary', id: "commit"
	= f.submit "Cancel", type: :reset, class: 'btn'